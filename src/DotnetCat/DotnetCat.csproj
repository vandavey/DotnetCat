<Project Sdk="Microsoft.NET.Sdk">
    <!--
     DotnetCat project properties
    -->
    <PropertyGroup>
        <ApplicationIcon>Resources/Icon.ico</ApplicationIcon>
        <AssemblyName>dncat</AssemblyName>
        <Authors>vandavey</Authors>
        <Configurations>Debug;Release;Linux;ARM64</Configurations>
        <Copyright>Copyright (c) 2020 vandavey</Copyright>
        <Description>DotnetCat</Description>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <OutputType>Exe</OutputType>
        <PackageLicenseFile>Resources/LICENSE.md</PackageLicenseFile>
        <Platforms>AnyCPU;x64;x86</Platforms>
        <RepositoryUrl>https://github.com/vandavey/DotnetCat</RepositoryUrl>
        <RootNamespace>DotnetCat</RootNamespace>
        <StartupObject>DotnetCat.Program</StartupObject>
        <TargetFramework>net6.0</TargetFramework>
    </PropertyGroup>

    <!--
     Config :: Debug
     Target :: x64
     RID    :: win-x64
    -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
        <OutputPath>bin/Debug</OutputPath>
        <PlatformTarget>x64</PlatformTarget>
        <PublishSingleFile>false</PublishSingleFile>
        <PublishTrimmed>false</PublishTrimmed>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <WarningLevel>3</WarningLevel>
    </PropertyGroup>

    <!--
     Config :: Release
     Target :: x64
     RID    :: win-x64
    -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
        <DebugSymbols>false</DebugSymbols>
        <DebugType>none</DebugType>
        <OutputPath>bin/Release</OutputPath>
        <PlatformTarget>x64</PlatformTarget>
        <PublishSingleFile>true</PublishSingleFile>
        <PublishTrimmed>true</PublishTrimmed>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <WarningLevel>3</WarningLevel>
        <WarningsAsErrors>NU1605</WarningsAsErrors>
    </PropertyGroup>

    <!--
     Config :: Release
     Target :: x86
     RID    :: win-x86
    -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86'">
        <DebugSymbols>false</DebugSymbols>
        <DebugType>none</DebugType>
        <OutputPath>bin/Release</OutputPath>
        <PlatformTarget>x86</PlatformTarget>
        <PublishSingleFile>true</PublishSingleFile>
        <PublishTrimmed>true</PublishTrimmed>
        <RuntimeIdentifier>win-x86</RuntimeIdentifier>
        <WarningLevel>3</WarningLevel>
        <WarningsAsErrors>NU1605</WarningsAsErrors>
    </PropertyGroup>

    <!--
     Config :: Linux
     Target :: x64
     RID    :: linux-x64
    -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Linux|x64'">
        <DebugSymbols>false</DebugSymbols>
        <DebugType>none</DebugType>
        <OutputPath>bin/Release</OutputPath>
        <PlatformTarget>x64</PlatformTarget>
        <PublishSingleFile>true</PublishSingleFile>
        <PublishTrimmed>true</PublishTrimmed>
        <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
        <WarningLevel>3</WarningLevel>
    </PropertyGroup>

    <!--
     Config :: ARM64
     Target :: AnyCPU
     RID    :: linux-arm64
    -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='ARM64|AnyCPU'">
        <DebugSymbols>false</DebugSymbols>
        <DebugType>none</DebugType>
        <OutputPath>bin/Release</OutputPath>
        <PlatformTarget>AnyCPU</PlatformTarget>
        <PublishSingleFile>true</PublishSingleFile>
        <PublishTrimmed>true</PublishTrimmed>
        <RuntimeIdentifier>linux-arm64</RuntimeIdentifier>
        <WarningLevel>3</WarningLevel>
    </PropertyGroup>

    <!--
     Define Linux compiler constants
    -->
    <PropertyGroup Condition="'$(Configuration)'=='ARM64' OR '$(Configuration)'=='Linux'">
        <DefineConstants>LINUX</DefineConstants>
    </PropertyGroup>

    <!--
     Define Windows compiler constants
    -->
    <PropertyGroup Condition="'$(Configuration)'=='Debug' OR '$(Configuration)'=='Release'">
        <DefineConstants>WINDOWS</DefineConstants>
    </PropertyGroup>

    <!--
     Include source code and resources
    -->
    <ItemGroup>
        <Folder Include="Contracts/" />
        <Folder Include="Errors/" />
        <Folder Include="IO/" />
        <Folder Include="IO/FileSystem/" />
        <Folder Include="IO/Pipelines/" />
        <Folder Include="Network/" />
        <Folder Include="Network/Nodes/" />
        <Folder Include="Properties/" />
        <Folder Include="Properties/PublishProfiles/" />
        <Folder Include="Resources/" />
        <Folder Include="Shell/" />
        <Folder Include="Shell/Commands/" />
        <Folder Include="Shell/WinApi/" />
        <Folder Include="Utils/" />
    </ItemGroup>
</Project>
